{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2021",

    "strict": true,

    "esModuleInterop": true,
    "moduleResolution": "Node",

    "outDir": "./dist",
    "rootDir": "./src",

    "resolveJsonModule": true,
    "skipLibCheck": true,

    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules"]
}
