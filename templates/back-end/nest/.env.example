########
# Application config
NODE_ENV=development
API_PORT=3000
PREFIX=/api/v1/
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# database config
DB_PORT=5432
DB_CONNECTION=postgres
DB_HOST=postgres
DB_USERNAME=root
DB_PASSWORD=root
DB_DATABASE=api_template_db

# JWT config
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=1d

# Storage config (MinIO/S3)
MINIO_HOST=minio
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_BUCKET_NAME=api-template-bucket
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin

# SMTP config
SMTP_FROM_ADDRESS='noreply@example.com'
SMTP_FROM_NAME='API Template'
SMTP_HOST='smtp.gmail.com'
SMTP_PASSWORD=''
SMTP_PORT=587
SMTP_USERNAME=''

# External OIDC (opcional)
# HOST_API_AUTH_JWKS=https://sso.example.com/jwk
# HOST_API_AUTH_WELL_KNOWN_OIDC=https://sso.example.com/.well-known/openid-configuration
# ENABLE_MOCK_ACCESS_TOKEN=true
